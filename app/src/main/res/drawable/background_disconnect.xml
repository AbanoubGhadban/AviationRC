<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item>
                <rotate android:fromDegrees="135" android:pivotX="50%" android:pivotY="50%" android:toDegrees="135">
                    <shape android:shape="line">
                        <stroke android:width="5dp" android:color="#F00" />
                    </shape>
                </rotate>
            </item>
            <item>
                <rotate android:fromDegrees="45" android:pivotX="50%" android:pivotY="50%" android:toDegrees="45">
                    <shape android:shape="line">
                        <stroke android:width="5dp" android:color="#f00" />
                    </shape>
                </rotate>
            </item>

        </layer-list>
    </item>
    <item android:state_enabled="false">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item>
                <rotate android:fromDegrees="135" android:pivotX="50%" android:pivotY="50%" android:toDegrees="135">
                    <shape android:shape="line">
                        <stroke android:width="5dp" android:color="#555" />
                    </shape>
                </rotate>
            </item>
            <item>
                <rotate android:fromDegrees="45" android:pivotX="50%" android:pivotY="50%" android:toDegrees="45">
                    <shape android:shape="line">
                        <stroke android:width="5dp" android:color="#555" />
                    </shape>
                </rotate>
            </item>

        </layer-list>
    </item>
</selector>